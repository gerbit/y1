<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/tweet_layout_padding_bottom">

    <ImageView
        android:id="@+id/profile_img"
        android:src="@android:color/transparent"
        android:padding="@dimen/tweet_profile_img_paddings"
        android:layout_width="@dimen/tweet_profile_img_width"
        android:layout_height="@dimen/tweet_profile_img_height" />

    <TextView
        android:layout_toRightOf="@id/profile_img"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/profile_img"
        android:layout_below="@id/name"
        android:paddingBottom="@dimen/tweet_name_padding_bottom"
        android:id="@+id/screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- TODO make floating around profile_img -->
    <TextView
        android:layout_toRightOf="@id/profile_img"
        android:layout_below="@id/screen_name"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>